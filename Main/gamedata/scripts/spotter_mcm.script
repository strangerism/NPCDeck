function do_combat_on()
	if squad_is_peaceful then return end

	if marked_enemy then
		if not marked_enemy:alive() then
			marked_enemy = nil
		end
	else
		-- printf("- TAKE POINT COMBAT [TAG]")
		local enemy = find_enemy()
	end
end

